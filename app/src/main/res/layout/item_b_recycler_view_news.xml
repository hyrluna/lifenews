<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="@dimen/list_item_bottom_margin"
        android:textColor="@color/list_item_title"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/item_image_2"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/list_item_bottom_margin"
        android:layout_below="@id/item_title_2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/item_category_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/list_item_bottom_margin"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>