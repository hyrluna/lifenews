<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="@dimen/item_card_view_margin"
    android:clickable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/banner_life_item">

        <LinearLayout
            android:id="@+id/life_item_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_life_icon"
                android:layout_width="@dimen/life_item_constellation_icon"
                android:layout_height="@dimen/life_item_constellation_icon"
                android:layout_margin="5dp"
                android:contentDescription="item_icon"/>

            <TextView
                android:id="@+id/test_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingStart="5dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/item_life_background"
            android:layout_above="@id/life_item_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="item_background" />

    </RelativeLayout>

</android.support.v7.widget.CardView>